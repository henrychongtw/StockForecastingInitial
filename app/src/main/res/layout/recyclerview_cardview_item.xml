<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:layout_gravity="right"
        android:textColor="@color/white"
        android:textSize="10pt"></TextView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        card_view:cardBackgroundColor="#474B50"
        card_view:cardCornerRadius="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/Predictor"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predictor"
                    android:id="@+id/tvPredictPeople"
                    android:textColor="#E9B405"
                    android:textSize="7pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@+id/tvNumber"
                    android:layout_toEndOf="@+id/tvNumber" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accuracy"
                    android:id="@+id/tvAccuracy"
                    android:textColor="#FF0000"
                    android:textSize="7pt"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@+id/tvEventContent"
                    android:layout_toEndOf="@+id/tvEventContent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/Target"
                android:layout_toRightOf="@+id/Predictor"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tname"
                    android:id="@+id/tvPredictTargetName"
                    android:textColor="#FFFFFF"
                    android:textSize="7pt"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TId"
                    android:id="@+id/tvPredictTargetId"
                    android:textColor="#FFFFFF"
                    android:textSize="7pt"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Status"
                android:id="@+id/tvResultStatus"
                android:textColor="#C9C9C9"
                android:textSize="9pt"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tvEventContent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Event"
                android:id="@+id/tvEventContent"
                android:textColor="#FFF100"
                android:textSize="9pt"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>